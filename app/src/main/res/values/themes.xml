<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.KidzLearnApp" parent="Theme.Material3.DayNight.NoActionBar">
<!--         <item name="colorPrimary">@color/white</item>-->
    </style>

    <style name="FormCardView">
        <item name="backgroundColor">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="FormButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_black_border</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="LevelButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="Theme.KidzLearnApp" parent="Base.Theme.KidzLearnApp" />
</resources>